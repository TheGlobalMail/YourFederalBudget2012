<!DOCTYPE html>
<html>
    <head>
        <title>Your Federal Budget 2012</title>

        {% include 'less.twig' %}
    </head>
    <body>
        <header class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a href="/" class="brand">How to spend 364 billion dollars</a>

                    <div class="icons">
                        <a class="share popover-link carousel-sticky-popover-link" href="javascript:void(0)"><span class="text">share</span></a>
                        <div id="share-box" class="popover share-box">
                            <div class="arrow"></div>
                            <div class="popover-inner">
                                <h3>Share the budget tool</h3>
                                <a class="btn email-button" href="#" storyId="356">
                                    <img src="/vendor/tgm/images/mail-icon.png" alt="mail icon">
                                    email
                                </a>
                                <div class="addthis_toolbox">
                                    <a class="addthis_button_facebook_like" fb:like:layout="box_count" fb:like:href="http://budget2012-dev/" fb:like:width="49" fb:like:height="62"></a>
                                    <a class="addthis_button_tweet" tw:count="vertical" tw:url="http://budget2012-dev.thegmail.net.au:8080/"></a>
                                    <a class="addthis_button_google_plusone" g:plusone:size="tall" g:plusone:href="http://budget2012-dev/"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div id="main" class="container">
            <div id="left-column">
                <div id="budget-allocator">
                    <div class="categories">
                        {% for key, category in app.config.categories %}
                            {% include 'slider-box.twig' with { 'id': key, 'label': category.label, 'federalAllocation': category.federalAllocation } %}
                        {% endfor %}

                        <div id="budget-overview">
                            <div class="top">
                                <div class="title">Your Budget</div>
                                <div class="spent">$<span id="budget-total">0</span>b</div>
                            </div>

                            <div class="progress-bar">
                                <div class="progress">
                                    <div class="bar" style="width: 60%"></div>
                                </div>
                            </div>

                            <button class="btn" id="reset">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="right-column">
                <div id="visualisation"></div>
                <div id="more-info">
                    <h2 class="title"></h2>
                    <div class="info"></div>
                    <div class="modal extended-info hide fade" tabindex="-1" role="dialog" aria-labelledby="extended-info-title" aria-hidden="true">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                            <h3 id="extended-info-title" class="title">Modal header</h3>
                        </div>
                        <div class="modal-body"></div>
                    </div>
                    <a href="#" class="read-more">Read More</a>
                </div>
            </div>
        </div>

        <div class="modal email-it hide fade">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h3 class="title">Share via Email</h3>
            </div>
            <div class="modal-body">
                Email Form
            </div>
            div.
        </div>

        {% include 'javascript.twig' %}
    </body>
</html>