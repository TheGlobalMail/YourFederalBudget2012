<div id="budget-allocator" class="sidepane" data-tab="0">
    <div id="budget-overview">
        <div class="top">
            <div class="control-label"><span>1</span> Choose amount to calculate:</div>

            <div class="toggle">
                <div class="federal-spending side active" data-name="federal-spending">2012-13 Federal Budget Spending</div>

                <div class="or">Or</div>

                <div class="your-pretax-income side" data-name="your-pretax-income">
                    <label for="your-pretax-income">Your pre-tax income</label>
                    <div class="input-prepend">
                        <span class="add-on">$</span>
                        <input type="number" name="your-pretax-income" step="1" value="50000">
                    </div>
                </div>
            </div>

            <div class="title">Tax revenue: <span class="budget-allowance">$0b</span></div>
            <div class="spent">Remaining: <span class="budget-remaining">0b</span></div>
        </div>

        <div class="progress-bar">
            <div class="progress">
                <div class="bar" style="width: 0%"></div>
            </div>
        </div>
    </div>

    <div class="categories">
        <div class="control-label"><span>2</span> Move sliders to set funding amount:</div>
        {% for key, category in app.config.categories %}
            {% include 'slider-box.twig' with { 'id': key, 'label': category.label, 'federalAllocation': category.federalAllocation } %}
        {% endfor %}
    </div>

    <div class="actions">
        <button class="btn btn-link reset-budget-btn"><i class="icon-repeat"></i> <span>Reset</span></button>
        <a href="" class="btn btn-success pull-right save-budget-btn disabled"><i class="icon-ok"></i> <span>Save &amp; Share</span></a>
    </div>

    <p class="help-block privacy-help">{{ app.config.messages.incomePrivacy }}</p>
</div>